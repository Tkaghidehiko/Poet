<nav aria-label="パンくずリスト">
  <ol class="breadcrumb">
    <li class="breadcrumb-item active" aria-current="page">アーティスト登録</li>
  </ol>
</nav>

                <%= form_for(@poem) do |f| %>
                    <% if @poem.errors.any? %>
                      <div id="error_explanation">
                        <h3><%= pluralize(@poem.errors.count, "error") %> invalidated your post.</h3>
                        <ul>
                        <% @poem.errors.full_messages.each do |message| %>
                          <li><%= message %></li>
                        <% end %>
                        </ul>
                      </div>
                    <% end %>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group has-icon">
                        <h5>歌詞</h5>
                          <%= f.text_area :poem, size: "100x100" %>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <%= f.submit "create poem", class: "btn btn-lg btn-primary btn-base-1 mt-20" %>
                      </div>
                    </div>
                <% end %>